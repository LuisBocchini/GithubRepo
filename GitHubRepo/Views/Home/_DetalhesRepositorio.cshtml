@model RepositorioExibicao

@if (Model != null)
{
    <form class="row g-3 formDados" id="formRepositorio">
        <div class="col-md-12" style="transform: translateY(-11px);padding-left: 0;margin-top: 0;">
            <img src="~/imgs/github.png" />
            <span style="font-size: 20px;font-weight: bold;">@Model.Nome</span>
        </div>
        <div class="col-md-12">
            <label for="inputEmail4" class="form-label">Nome Completo</label>
            <input type="text" class="form-control" id="inputNome" value="@Model.NomeCompleto" readonly>
        </div>
        <div class="col-md-6">
            <label for="inputPassword4" class="form-label">Linguagem</label>
            @if (!string.IsNullOrEmpty(Model.Linguagem))
            {
                <input type="text" class="form-control" id="inputLinguagem" value="@Model.Linguagem" readonly>
            }
            else
            {
                <input type="text" class="form-control" id="inputLinguagem" value="Indisponível" readonly>
            }
        </div>
        <div class="col-md-6">
            <label for="inputPassword4" class="form-label">Visibilidade</label>
            <input type="text" class="form-control" id="inputVisibilidade" value="@Model.Visibilidade" readonly>
        </div>
        <div class="col-12">
            <label for="inputAddress" class="form-label">Descrição</label>
            <div class="form-floating">
                @if (!string.IsNullOrEmpty(Model.Descricao))
                {
                    <textarea class="form-control" id="floatingTextarea" style="height: 100px" readonly>@Model.Descricao</textarea>
                }
                else
                {
                    <textarea class="form-control" id="floatingTextarea" style="height: 100px" readonly>Indisponível...</textarea>
                }
                <label for="floatingTextarea2"></label>
            </div>
        </div>
        <div class="col-md-6">
            <label for="inputPassword4" class="form-label">Data Criação</label>
            <input type="text" class="form-control" id="inputVisibilidade" value="@Model.CriadoEm" readonly>
        </div>
        <div class="col-md-6">
            <label for="inputPassword4" class="form-label">Última Atualização</label>
            <input type="text" class="form-control" id="inputVisibilidade" value="@Model.AtualizadoEm" readonly>
        </div>
        <div class="col-12">
            <label for="inputAddress2" class="form-label">Link</label>
            <input type="text" class="form-control" id="inputLink" value="@Model.Url" readonly>
        </div>

        <div class="col-md-12" id="infoUsuario">
            <div class="form-control">
                <img src="@Model?.Usuario?.Avatar" style="width: 100px;" />
                <div class="labelUsuario">
                    <label for="" class="form-label">@Model?.Usuario?.Login</label>
                    <label for="" class="form-label"><a href="@Model?.Usuario?.LinkPerfil" target="_blank style="font-weight: 400;text-decoration: none;">@Model?.Usuario?.LinkPerfil</a></label>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.erro
    </div>
}
